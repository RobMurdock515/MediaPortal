<UserControl x:Class="MediaPortal.MVVM.View.Controls.NextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPortal.MVVM.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <!-- Button for Playing next file -->
        <Button x:Name="NextButton" 
                Style="{StaticResource MediaControlIconButtonStyle}" 
                Content="{StaticResource NextIcon}" 
                ToolTip="Next" 
                Click="NextButton_Click" />
    </Grid>
</UserControl>
